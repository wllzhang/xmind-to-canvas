{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "rootDir": "./src/core",
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": [
    "src/core/**/*.ts"
  ],
  "exclude": [
    "src/main.ts",
    "**/*.test.ts"
  ]
}

